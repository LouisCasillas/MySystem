function xpid()
{
(
	xprop | grep PID | awk '{print $NF}'
)
}

function ded()
{
(
	find . -type d -empty -delete
)
}

function ds()
{
(
	du -hs * | sort -h
)
}

function sort-by-alpha()
{
(
	ls | \
		cut -c1 | \
		sort -u | \
		grep -E -e "[[:alpha:]]" | \
		while read line; do
			mkdir -p "$line"
			mv "$line"* "$line/"
		done
	
	mkdir -p misc

	find . -maxdepth 1 -type f -exec mv "{}" misc/ \;
)
}

function randnum()
{
(
	first_num="$1"
	second_num="$2"

	if [[ -z "$first_num" ]]; then
		echo "$0: <start number> <optional end number>"
		exit 1
	fi

	if [[ -z "$second_num" ]]; then
		second_num="$first_num"
		first_num="0"
	else
		second_num="$(( $second_num - $first_num ))"
	fi

	echo "$(( ($RANDOM % ($second_num + 1)) + $first_num ))"
)
}
