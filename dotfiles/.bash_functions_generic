function xpid()
{
(
	xprop | grep PID | awk '{print $NF}'
)
}

function ded()
{
(
	find . -type d -empty -delete
)
}

function ds()
{
(
	du -hs * | sort -h
)
}

function sort-by-alpha()
{
(
	ls | \
		cut -c1 | \
		sort -u | \
		grep -E -e "[[:alpha:]]" | \
		while read line; do
			mkdir -p "$line"
			mv "$line"* "$line/"
		done
	
	mkdir -p misc

	find . -maxdepth 1 -type f -exec mv "{}" misc/ \;
)
}
