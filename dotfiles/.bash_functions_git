function gac()
{
	git add "$1" && \
	git commit -m "$2"
}

function gacp()
{
	git add "$1" && \
	git commit -m "$2" && \
	git push
}

function gsa()
{
	find * -maxdepth 0 -type d -exec sh -c 'cd "{}" && git status --short --branch' \;
}

function gpa()
{
	find * -maxdepth 0 -type d -exec sh -c 'cd "{}" && git pull' \;
}

alias ga='git add'
alias gap='git add --patch'
alias gc='git commit -m'
alias gd='git diff'
alias gl='git log'
alias gmv='git mv'
alias gp='git push'
alias gpl='git pull'
alias gr='git reset'
alias grh='git reset --hard'
alias grm='git rm'
alias gs='git status --short --branch'
alias go='git config --get remote.origin.url'
