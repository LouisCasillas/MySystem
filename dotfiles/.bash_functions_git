function gac()
{
	git add "$1" && \
	git commit -m "$2"
}

function gacp()
{
	git add "$1" && \
	git commit -m "$2" && \
	git push
}

function gaacp()
{
	git add --all && \
	git commit -m "$1" && \
	git push
}

function gcp()
{
	git commit -m "$1" && \
	git push
}

function gsa()
{
	find * -maxdepth 0 -type d | \
		while read repo; do
			cd "$repo"
			echo "Repo: $repo"
			git status --short --branch
			echo ""
			cd ..
		done
}

function gpla()
{
	find * -maxdepth 0 -type d | \
		while read repo; do
			cd "$repo"
			echo "Repo: $repo"
			git pull
			echo ""
			cd ..
		done
}

alias ga='git add'
alias gap='git add --patch'
alias gc='git commit --message'
alias gd='git diff'
alias gl='git log'
alias gmv='git mv'
alias gp='git push'
alias gpl='git pull'
alias gr='git reset'
alias grh='git reset --hard'
alias grm='git rm'
alias gs='git status --short --branch'
alias go='git config --get remote.origin.url'
