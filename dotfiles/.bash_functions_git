# TODO:
# 1) turn all aliases into functions and add -C <directory> so git
# commands can be run while outside a git repo directory
# 2) change git add so multiple files can be passed and not just one

function gac()
{(
	git add "$1" && \
	git commit -m "$2"
)}

function gacp()
{(
	git add "$1" && \
	git commit -m "$2" && \
	git push
)}

function gaacp()
{(
	git add --all && \
	git commit -m "$1" && \
	git push
)}

function gcp()
{(
	git commit -m "$1" && \
	git push
)}

function gsa()
{(
	find * -maxdepth 0 -type d | \
		while read repo; do
			cd "$repo"
			echo "Repo: $repo"
			git status --short --branch
			echo ""
			cd ..
		done
)}

function gpla()
{(
	find * -maxdepth 0 -type d | \
		while read repo; do
			cd "$repo"
			echo "Repo: $repo"
			git pull
			echo ""
			cd ..
		done
)}

function gignore()
{(
    git_repo_top_dir="$(git rev-parse --show-toplevel)"
    echo "$1" >> "$git_repo_top_dir/.git/info/exclude" && \
        git update-index --assume-unchanged "$1"
)}

alias ga='git add'
alias gap='git add --patch'
alias gc='git commit --message'
alias gd='git diff'
alias gl='git log'
alias gmv='git mv'
alias gp='git push'
alias gpl='git pull'
alias gr='git reset'
alias grh='git reset --hard'
alias grm='git rm'
alias gs='git status --short --branch'
alias go='git config --get remote.origin.url'
